{
    "openapi": "3.0.1",
    "info": {
        "title": "FlashCard",
        "version": "1.0.0",
        "description": "REST API designed to provide flashcard functions for ez language",
        "contact": {
            "email": "vinhphuc.it@gmail.com",
            "name": "Phuc Tran"
        }
    },
    "servers": [
        {
            "url": "http://localhost:3000/flashcard/"
        },
        {
            "url": "https://ez-lang-alpha.herokuapp.com/flashcard/"
        }
    ],
    "tags": [
        {
            "name": "System",
            "description": "System APIs"
        },
        {
            "name": "FlashCard",
            "description": "FlashCard APIs"
        }
    ],
    "paths": {
        "/health/check": {
            "get": {
                "tags": [
                    "System"
                ],
                "summary": "Health Check",
                "operationId": "connect",
                "parameters": [
                    {
                        "in": "query",
                        "name": "query",
                        "schema": {
                            "type": "string"
                        },
                        "description": "metric for detail information"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successfull Operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/HealthCheck"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server error"
                    }
                }
            }
        },
        "/flashCards": {
            "get": {
                "tags": [
                    "FlashCard"
                ],
                "summary": "Get FlashCards",
                "operationId": "getFlashCards",
                "parameters": [
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "maximum 100",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "start",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "sort",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "query",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful Operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/GetFlashCardsResponse"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server error"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "FlashCard"
                ],
                "summary": "Create FlashCard",
                "operationId": "createFlashCard",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CreateFlashCardRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful Operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/FlashCard"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server error"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/flashCards/{id}": {
            "get": {
                "tags": [
                    "FlashCard"
                ],
                "summary": "Get FlashCard By Id",
                "operationId": "getFlashCardById",
                "parameters": [
                    {
                        "name": "id",
                        "required": true,
                        "in": "path",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful Operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/FlashCard"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server error"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "put": {
                "tags": [
                    "FlashCard"
                ],
                "summary": "Update FlashCard By Id",
                "operationId": "updateFlashCardById",
                "parameters": [
                    {
                        "name": "id",
                        "required": true,
                        "in": "path",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UpdateFlashCardRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful Operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/FlashCard"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server error"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "delete": {
                "tags": [
                    "FlashCard"
                ],
                "summary": "Delete FlashCard",
                "operationId": "deleteFlashCardById",
                "parameters": [
                    {
                        "name": "id",
                        "required": true,
                        "in": "path",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Successful Operation"
                    },
                    "500": {
                        "description": "Server error"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "HealthCheck": {
                "type": "object",
                "$ref": "#/components/schemas/AppInfo"
            },
            "AppInfo": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "EZ Language"
                    },
                    "version": {
                        "type": "string",
                        "example": "1.0.0"
                    },
                    "host": {
                        "type": "string",
                        "example": "0.0.0.0"
                    },
                    "port": {
                        "type": "string",
                        "example": "3000"
                    },
                    "env": {
                        "type": "string",
                        "example": "dev"
                    }
                }
            },
            "CreateFlashCardRequest": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    }
                }
            },
            "UpdateFlashCardRequest": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    }
                }
            },
            "GetFlashCardsResponse": {
                "type": "object",
                "allOf": [
                    {
                        "$ref": "#/components/schemas/BaseListResponse",
                        "type": "object",
                        "properties": {
                            "items": {
                                "type": "array",
                                "items": {
                                    "$ref": "#/components/schemas/FlashCard"
                                }
                            }
                        }
                    }
                ]
            },
            "BaseListResponse": {
                "type": "object",
                "properties": {
                    "limit": {
                        "type": "number"
                    },
                    "start": {
                        "type": "number"
                    },
                    "totalItems": {
                        "type": "number"
                    },
                    "sort": {
                        "type": "string"
                    },
                    "query": {
                        "type": "string"
                    },
                    "items": {
                        "type": "array",
                        "items": {
                            "$ref": "object"
                        }
                    }
                }
            },
            "FlashCard": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "title": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "createdAt": {
                        "type": "string"
                    },
                    "updatedAt": {
                        "type": "string"
                    }
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}
